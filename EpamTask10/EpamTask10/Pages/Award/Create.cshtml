@using EpamTask10.Models;
@{
    Layout = "~/Pages/_Layout.cshtml";

    Boolean IsAdded = false;
    Boolean ShowError = false;
    string Title = "";

    if (IsPost)
    {
        Title = Request["Title"];
        //SelectedUsersId = Request["A"];

        if (Title != null && Title.Length > 3)
        {
            EpamTask10.Models.Main.AddAward(Title);
            IsAdded = true;
        }
        else
        {
            ShowError = true;
        }
    }
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Styles/Basic.css" rel="stylesheet" />
    <title></title>
</head>
<body>
    <div class="container">

        <div>
            <h2>Awards</h2>
            <button type="button" id="ToAward" class="btn btn-outline-secondary">< Back</button>
        </div>

        <div style="margin-top:15px" ; class="container">
            <form action="~/Pages/Award/Create.cshtml" method="post">
                <div>
                    <label class="col-form-label"> Award title: </label>
                    <input type="text" name="Title" id="Title" value="" class="form-control" />
                </div>

                <button class="btn btn-success" style="margin-top:15px">Add Award</button>
            </form>

            <div style="margin-top:15px">
                @if (ShowError)
                {
                    <p class="text-danger">Title length more then 3 characters. Try again ☆</p>
                }

                @if (IsAdded)
                {
                    <p class="text-success">Award "@Title" is Added ☆</p>
                }
            </div>

        </div>

    </div>
    <script src="~/Scripts/jquery-3.0.0.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/pages/changePage.js"></script>
</body>
</html>
