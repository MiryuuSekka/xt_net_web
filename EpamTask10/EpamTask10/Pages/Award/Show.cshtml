<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <title></title>
</head>
<body style="background-color:#222; color:#fff">
    <div class="container">

        <div>
            <h2>Awards</h2>
            <button type="button" id="ToAward" class="btn btn-outline-secondary">< Back</button>
        </div>

        <div style="margin-top:15px">
            <h5>all users table</h5>
        </div>
        <div class="col-lg-12">
            <table class="table table-hover">
                <thead>
                    <tr style="color:aliceblue; background-color:#444;">
                        <th scope="col">Id</th>
                        <th scope="col">Title</th>
                        <th scope="col">Icon</th>
                        <th scope="col">Users</th>
                        <th scope="col">Settings</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @Awards)
                    {
                        <tr style="color:aliceblue;">
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>
                                <img src=@item.Image
                                     alt="Award @item.Title"
                                     style="width:32px; background-color:transparent;" />
                            </td>

                            @if (@item.Users == null)
                            {
                                <td>none</td>
                            }
                            else
                            {
                                <td>
                                    @foreach (var user in @item.Users)
                                    {
                                        <span class="badge badge-info">
                                            @user.Name
                                        </span>
                                    }
                                </td>
                            }
                            <td style="display:flex">
                                <form action="~/Pages/MenuAward/Show.cshtml" method="post">
                                    <button type="button" class="btn btn-outline-secondary" name="ChangeUser" value="@item.Id">
                                        Change >
                                    </button>
                                </form>

                                <form action="~/Pages/MenuAward/Show.cshtml" method="post">

                                    <button type="button" class="btn btn-outline-danger" name="DeleteUser" value="@item.Id">
                                        Delete
                                    </button>
                                </form>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

    <script src="~/Scripts/jquery-3.0.0.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/pages/changePage.js"></script>
</body>
</html>
