@using EpamTask10.Models;
@{
    Layout = "~/Pages/_Layout.cshtml";
    var Users = WebData.GetAllUsers();
    string role = WebData.CurrentUser.Role.ToString();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Styles/Basic.css" rel="stylesheet" />
    <title></title>
</head>
<body>
    <div class="container">

        <div>
            <h2>Users</h2>
            @if (role == "Guest")
            {
                <button type="button" id="ToMain" class="btn btn-outline-secondary">< Back</button>
            }
            else
            {
                <button type="button" id="ToUser" class="btn btn-outline-secondary">< Back</button>
            }
        </div>

        <div class="col-lg-12" style="margin-top:15px">

            <table class="table table-hover">
                <thead>
                    <tr style="background-color:#444;">
                        <th scope="col">Id</th>
                        <th scope="col">Avatar</th>
                        <th scope="col">Name</th>
                        <th scope="col">Age</th>
                        <th scope="col">Birthday</th>
                        @if (role == "User" || role == "Admin")
                        {
                            <th scope="col">Awards</th>
                        }
                        @if (role == "Admin")
                        {
                            <th scope="col">Settings</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @Users)
                    {
                    <tr>
                        <td>@item.Id</td>
                        <td> <img src=@item.Image alt="Avatar @item.Name" /> </td>
                        <td>@item.Name</td>
                        <td>@item.Age</td>
                        <td>@item.Birthday</td>

                        @if (role == "User" || role == "Admin")
                        {
                            if (@item.Awards == null)
                            {
                                <td>none</td>
                            }
                            else
                            {
                                <td>
                                    @foreach (var award in @item.Awards)
                                    {
                                        <span class="badge badge-warning"> @award.Title </span>
                                    }
                                </td>
                            }
                        }
                        @if (role == "Admin")
                        {
                            <td>
                                <a class="btn btn-outline-warning" href="~/Pages/User/Edit.cshtml?id=@item.Id"> Edit > </a>
                            </td>
                        }
                    </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

    <script src="~/Scripts/jquery-3.0.0.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/pages/changePage.js"></script>
</body>
</html>
