@{
    string username = "guest";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <title></title>
</head>
<body style="background-color:#222; color:#fff">
    <div>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <h3 style="color:#000;">Task 10</h3>

            <div class="collapse navbar-collapse" id="navbarColor03">
                <form class="form-inline my-2 my-lg-0" style="margin-left:auto; margin-right:5px; color:#000;">
                    <img style="border-radius:100%; width:32px;"
                         src="https://pbs.twimg.com/media/EQrD4oPXYAUwxoC?format=jpg&name=360x360"
                         alt="UserAvatar" />
                    <div style="margin:auto 10px;">
                        <h5>@username</h5>
                    </div>

                    @if (username == "guest")
                    {
                        <div>
                            <button type="button" id="LogInButton" class="btn btn-primary">Login</button>
                            <button type="button" id="SignUpButton" class="btn btn-warning">SignUp</button>
                        </div>
                    }
                    else
                    {
                        <div>
                            <button type="button" id="LogOutButton" class="btn btn-outline-danger">Logout</button>
                        </div>
                    }
                </form>
            </div>
        </nav>

        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-3.0.0.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/pages/changePage.js"></script>
</body>
</html>
