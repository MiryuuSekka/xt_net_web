@using EpamTask10.Models;
@{
    string username = WebData.CurrentUser.Username;
    string role = WebData.CurrentUser.Role.ToString();
    string avatar = WebData.CurrentUserAvatar;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Styles/Basic.css" rel="stylesheet" />
    <title></title>
</head>
<body>
    <div>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <h3 style="color:#000;">Task 10</h3>

            <div class="collapse navbar-collapse" id="navbarColor03">
                <form class="form-inline my-2 my-lg-0" style="margin-left:auto; margin-right:5px; color:#000;">
                    <img src="@avatar" alt="UserAvatar" />
                    <div style="margin:auto 10px;">
                        <h5>@username</h5>
                    </div>

                    @if (role == "Guest")
                    {
                        <div>
                            <button type="button" id="LogInButton" class="btn btn-primary">Login</button>
                            <button type="button" id="SignUpButton" class="btn btn-warning">SignUp</button>
                        </div>
                    }
                    else
                    {
                        <div>
                            <a class="btn btn-outline-danger" href="~/Pages/Autorisation/Logout.cshtml">
                                Log out
                            </a>
                        </div>
                    }
                </form>
            </div>
        </nav>

        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-3.0.0.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/pages/changePage.js"></script>
</body>
</html>
